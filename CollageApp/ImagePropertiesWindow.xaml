<Window x:Class="CollageApp.ImagePropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollageApp"
        mc:Ignorable="d"
        Title="ImagePropertiesWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <Button Name="SaveConfig" Background="#FFDDDDDD" Click="SaveConfig_Click">Save Config</Button>
        </Menu>
        <TextBlock Grid.Row="1" Text="All Image Properties" FontWeight="Bold" FontSize="14" Margin="10,0,0,10"/>
        <ListBox Grid.Row ="2" x:Name="PropertiesListBox" />

    </Grid>
</Window>
