<Window x:Class="CollageApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bruh" Height="438" Width="735">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="DarkGoldenrod">
                <MenuItem Header="_File" Click="MenuItem_Click">
                    <MenuItem Header="_Open"/>
                </MenuItem>
                <CheckBox Name="GridCheckBox" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked">
                    Grid
                </CheckBox>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
        <Canvas x:Name="CollageCanvas" Background="DarkCyan"
                SizeChanged="CollageCanvas_SizeChanged" Margin="10,18,10,10"/>
        <ItemsControl x:Name="GridItems" Grid.Row="1" Grid.Column="1" Margin="10">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="3" Columns="3"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="5">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.OnClickCommand}" />
                        </Border.InputBindings>
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding ImageSource}" Stretch="UniformToFill"/>
                        </Border.Background>
                        <!-- Allow dragging and dropping -->
                        <Border.OpacityMask>
                            <ImageBrush ImageSource="{Binding ImageSource}" Stretch="Uniform"/>
                        </Border.OpacityMask>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
