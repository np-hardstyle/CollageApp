<Window x:Class="CollageApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CollageApp"
        Title="CollageMaker" Height="448" Width="726"
        FocusManager.FocusedElement="{Binding ElementName=CollageCanvas}">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="DarkGray">
                <MenuItem Name="FileOpenButton" Header="_File">
                    <MenuItem Header="_Open"/>
                </MenuItem>
                <CheckBox Name="GridCheckBox">
                    Grid
                </CheckBox>
                <Button Name ="Properties">
                    Properties
                </Button>
            </Menu>
        </DockPanel>
        <local:DrawingPad x:Name="CollageCanvas" Background="Gray" Margin="10,17,10,10"/>
    </Grid>
</Window>
